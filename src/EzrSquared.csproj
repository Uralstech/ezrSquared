<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<TargetFramework>net7.0</TargetFramework>
		<SupportedOSPlatformVersion>7.0</SupportedOSPlatformVersion>
		<SelfContained>True</SelfContained>

		<RootNamespace>EzrSquared</RootNamespace>
		<StartupObject>EzrSquared.EzrShell.Shell</StartupObject>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<DebugType>embedded</DebugType>

		<ApplicationIcon>Icon.ico</ApplicationIcon>
		<GeneratedAssemblyInfoFile>D:\Code\csharp\ezrSquared\src\AutoGeneratedAssemblyInfo.cs</GeneratedAssemblyInfoFile>
		<BaseOutputPath>D:\Code\csharp\ezrSquared\bin\ezrSquared\</BaseOutputPath>
		<BaseIntermediateOutputPath>D:\Code\csharp\ezrSquared\obj\ezrSquared\</BaseIntermediateOutputPath>

		<!--ONLY FOR X64 and ARM64-->
		<IsPublishable>True</IsPublishable>
		<PublishAot>True</PublishAot>
	</PropertyGroup>
	
	<PropertyGroup Condition=" '$(OS)' == 'Windows_NT' ">
		<DefineConstants>PLATFORM_WINDOWS</DefineConstants>
	</PropertyGroup>
</Project>
